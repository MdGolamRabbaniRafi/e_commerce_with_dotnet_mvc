@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <title>Confirm Delete</title>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Are You Sure?</h3>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <p class="text-danger">@ViewBag.ErrorMessage</p>
                        }
                        <form action="@Url.Action("ConfirmDelete", "Cupon", new { id = ViewBag.id })" method="post" enctype="multipart/form-data">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("AvailableCupon", "Cupon")'">No</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
