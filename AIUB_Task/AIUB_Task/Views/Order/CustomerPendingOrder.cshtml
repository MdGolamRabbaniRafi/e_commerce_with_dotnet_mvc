@model List<AIUB_Task.DAL.EF.Order>
@{ ViewBag.Title = "Customer Pending Order"; }

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Order Details</h2>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Total Order Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.Date</td>
                                        <td>@order.Status</td>
                                        <td>@order.TotalOrderPrice</td>
                                        <td>
                                            <a href="@Url.Action("OrderDetailsForCustomer", "Order", new { id = order.Id })" class="btn btn-sm btn-primary">View Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center">@ViewBag.ErrorMessage</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>