@{ ViewBag.Title = "All Orders"; }

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">All Orders</h2>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <table class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>User ID</th>
                                    <th>Status</th>
                                    <th>Total Order Price</th>
                                    <th>Number</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.Date</td>
                                        <td>@order.UserId</td>
                                        <td>@order.Status</td>
                                        <td>@order.TotalOrderPrice</td>
                                        <td>@order.Number</td>
                                        <td>
                                            <a href="@Url.Action("OrderDetailsForAdmin", "Order", new { id = order.Id })" class="btn btn-sm btn-primary">View Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center">No orders found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>