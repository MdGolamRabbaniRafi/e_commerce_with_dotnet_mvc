
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserDashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">

</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">User Dashboard</h3>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <input name="Cart" class="btn btn-primary" value="Cart" type="button" onclick="window.location.href='@Url.Action("ViewCart", "Product")'" />
                            <input name="SearchProduct" class="btn btn-primary" value="Available Product" type="button" onclick="window.location.href='@Url.Action("SearchAllProduct", "Product")'" />
                            <input name="OrderDetails" class="btn btn-primary" value="Order Details" type="button" onclick="window.location.href='@Url.Action("CustomerPendingOrder", "Order")'" />

                        </div>
                    </div>
                </div>

            </div>

                </div>

    </div>


</body>
</html>
