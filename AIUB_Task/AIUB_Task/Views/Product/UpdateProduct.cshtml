@model AIUB_Task.BLL.DTOs.ProductDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container mt-5">
        <h2>Update Product</h2>
        <form method="post" enctype="multipart/form-data">
            <!-- Include hidden field for product ID -->
            <input type="hidden" name="Id" value="@Model.Id" />

            <!-- Display existing product details -->
            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" name="Name" placeholder="Name" value="@Model.Name" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
            </div>

            <div class="form-group">
                <label for="Image">Image:</label>
                <input type="file" name="Image" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Image)</span>
            </div>

            <div class="form-group">
                <label for="Description">Description:</label>
                <textarea name="Description" placeholder="Description" class="form-control">@Model.Description</textarea>
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Description)</span>
            </div>

            <div class="form-group">
                <label for="Quantity">Quantity:</label>
                <input type="number" name="Quantity" placeholder="Quantity" value="@Model.Quantity" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Quantity)</span>
            </div>

            <div class="form-group">
                <label for="Price">Price:</label>
                <input type="number" name="Price" placeholder="Price" value="@Model.price" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.price)</span>
            </div>

            <div class="form-group">
                <label for="CategoryId">Category:</label>
                <select name="CategoryId" class="form-control">
                    <option value="">Select a category</option>
                    @if (ViewBag.categories != null)
                    {
                        foreach (var category in ViewBag.categories)
                        {
                            <option value="@category.Id" @(category.Id == Model.CategoryId ? "selected" : "")>@category.Name</option>
                        }
                    }
                </select>
                <span class="text-danger">@Html.ValidationMessageFor(m => m.CategoryId)</span>
            </div>

            <div class="form-group">
                <label for="Colors">Available Colors:</label><br>
                @if (ViewBag.Colors != null)
                {
                    foreach (var color in ViewBag.Colors)
                    {
                        <div class="form-check form-check-inline">
                            <input type="checkbox" name="Colors" value="@color.Id" class="form-check-input" />
                            <label class="form-check-label">@color.Name</label>
                        </div>
                    }
                }
            </div>

            <div class="form-group">
                <label for="Sizes">Available Sizes (In Inches):</label><br>
                @if (ViewBag.Sizes != null)
                {
                    foreach (var size in ViewBag.Sizes)
                    {
                        <div class="form-check form-check-inline">
                            <input type="checkbox" name="Sizes" value="@size.id" class="form-check-input" />
                            <label class="form-check-label">@size.sizeOfProduct</label>
                        </div>
                    }
                }
            </div>

            <input type="submit" value="Update Product" class="btn btn-primary" />
        </form>
    </div>

</body>
</html>
